// __multiversion__
// This signals the loading code to prepend either #version 100 or #version 300 es as apropriate.
// Newb Shader

#if __VERSION__ >= 300
    #define varying in
    out vec4 FragColor;
    #define gl_FragColor FragColor
#endif

uniform vec4 CURRENT_COLOR;

varying vec4 color;

void main()
{
  gl_FragColor.rgb = mix(color.rgb, CURRENT_COLOR.rgb, color.a*0.8);
  gl_FragColor.a = 1.0;
}